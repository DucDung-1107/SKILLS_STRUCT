# Environment variables for SkillStruct Platform
# Copy this file to .env and update the values

# Google API Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration
POSTGRES_DB=skillstruct_db
POSTGRES_USER=skillstruct_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://skillstruct_user:your_secure_password_here@postgres:5432/skillstruct_db

# Redis Configuration
REDIS_URL=redis://redis:6379

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# API Configuration
API_HOST=0.0.0.0
API_PORT_OCR=8000
API_PORT_JSON=8001
API_PORT_GRAPH=8002
API_PORT_RECOMMEND=8003
API_PORT_RAG=8004

# Streamlit Configuration
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=pdf,doc,docx

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Docker Configuration
COMPOSE_PROJECT_NAME=skillstruct
